@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApplication.Models.Film
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css">
    <script type="text/javascript" src="~/JS/JavaScript2.js"></script>
</head>
<body>

    <form class="form" asp-action="EditFilm" asp-controller="Create" method="post" enctype="multipart/form-data">
        <input type="hidden" value="@Model.Id" asp-for="Id">
        <div class="qw2">
            <div>
                <label>
                    <span>Выбрать другой постер</span>
                    <input type="file" oninput="block1(value)" value="@Model.UrlImage" id="file" name="uploadedFile" class="qw" accept="image/gif,image/png,image/jpeg,image/pjpeg">
                </label>
            </div>

            <div>
                <label data-marker="label">
                    <span>Название фильма</span>
                    <input class="qw1" asp-for="Name" onkeyup="block2(value)" value="@Model.Name" id="name" autocomplete="off" maxlength="50">
                </label>
            </div>

            <div>
                <label data-marker="label">
                    <span>Год создания</span>
                    <input onkeyup="block3(value)" id="year" value="@Model.Year" class="qw1" asp-for="Year" autocomplete="off" maxlength="50">
                </label>
            </div>

            <div>
                <label data-marker="label">
                    <span>Режиссер</span>
                    <input asp-for="Producer" id="producer" value="@Model.Producer" onkeyup="block4(value)" class="qw1" autocomplete="off" maxlength="50">
                </label>
            </div>

            <div>
                <label data-marker="label">
                    <span>Описание</span>
                    <textarea asp-for="Content" id="content"  onkeyup="block5(value)" class="qw3" rows="6" maxlength="5000">@Model.Content</textarea>
                </label>
            </div>

            <input type="submit" value="Изменить" class="qw2" disabled="disabled" id="Button1" />
        </div>

    </form>




</body>
</html>
